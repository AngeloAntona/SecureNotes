<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Main theme for dark mode -->
    <style name="Theme.SuperSecureNotes" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/primaryBackgroundColorNight</item>
        <item name="android:textColorPrimary">@color/primaryTextColorNight</item>
        <item name="colorPrimaryDark">@color/primaryBackgroundColorNight</item>
        <item name="colorAccent">@color/white</item>

        <!-- Customization of the Contextual Action Mode for dark mode -->
        <item name="actionModeBackground">@color/black</item>
        <item name="android:actionModeBackground">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:actionModeCloseDrawable">@android:drawable/ic_menu_close_clear_cancel</item>
    </style>

    <!-- SplashScreen theme for dark mode -->
    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primaryBackgroundColorNight</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/securenotes_logo_black</item>
        <item name="postSplashScreenTheme">@style/Theme.SuperSecureNotes</item>
    </style>
</resources>
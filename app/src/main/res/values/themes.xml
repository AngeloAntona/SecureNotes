<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema principale dell'app, compatibile con AppCompat -->
    <style name="Theme.SuperSecureNotes" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Personalizzazioni del tema -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <!-- Tema dello SplashScreen -->
    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <!-- Tema che verrÃ  applicato dopo lo splash screen -->
        <item name="postSplashScreenTheme">@style/Theme.SuperSecureNotes</item>
    </style>
</resources>